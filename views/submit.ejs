<%- include('partials/header') %>

<div class="submitform">
  <div class="submittext">
    <form action="/submit" method="POST" class="col s12">
      <div class="row">
        <div class="input-field">
          <label for="title"><h5>Title:</h5><label>
          <input type="text" id="title" name="title" />
        </div>
      </div>

      <div class="submittext">
        <div class="input-field">
          <label for="status"><h5>Status:</h5></label>
          <br />
          <select id="status" name="status">
            <option value="public" selected>Public</option>
            <option value="private">Private</option>
          </select>
        </div>
      </div>

      <div class="submittext">
        <div class="input-field">
          <h5>Tell Us Your Moment:</h5>
          <textarea id="body" name="moment"></textarea>
        </div>
      </div>

      <div class="submittext">
        <input type="submit" value="Save" class="btn btn-dark" />
        <a href="/moments" class="btn btn-light">Cancel</a>
      </div>
    </form>
  </div>
</div>
<%- include('partials/footer') %>
